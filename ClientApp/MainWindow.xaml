<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <Button DockPanel.Dock="Left" Margin="5" FontWeight="Bold" Click="Bolt" Content=" B "></Button>
            <Button DockPanel.Dock="Left" Margin="5" FontStyle="Italic"  Click="Italic" Content=" I "></Button>
            <Button DockPanel.Dock="Left" Margin="5" FontStretch="UltraCondensed" Click="Underline" Content=" U "></Button>
            <TextBox x:Name="size_textBox" DockPanel.Dock="Left" Margin="5,5,0,5" Text="{Binding ElementName=size_comboBox, Path=SelectedValue}" TextChanged="TextBox_TextChanged"/>
            <ComboBox DockPanel.Dock="Left" Margin="0,5,5,5" MaxWidth="5" Name="size_comboBox"></ComboBox>
        </DockPanel>
        
        <RichTextBox SpellCheck.IsEnabled="True" x:Name="ri"/>
    </DockPanel>
</Window>
